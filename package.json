{
  "name": "garn-validator",
  "version": "1.0.14",
  "description": "Runtime type validator for vanilla JS without dependencies",
  "main": "src/index.js",
  "module": "src/index.js",
  "browser": "commonjs/index.js",
  "files": [
    "src",
    "commonjs"
  ],
  "scripts": {
    "run:docker": "docker-compose run node",
    "test": "cd src && npm run test:watch",
    "test:watch": "jest tests --watch",
    "test:prod": "jest tests",
    "test:prod:dom": "jest tests --config=jest.config.dom.js",
    "prerelease": "npm run readme",
    "release": "npm version patch",
    "postrelease": "git push origin master --tags",
    "build": "npm run build:commonjs",
    "build:commonjs": "rimraf commonjs && npm run env && babel src --out-dir commonjs --ignore \"src/*.test.js\"",
    "env": "NODE_ENV=production || set NODE_ENV=production",
    "#postbuild:commonjs": "git add commonjs && git commit -m 'build done'",
    "predeploy": "npm run build:commonjs && npm run commit",
    "deploy": "git push origin master",
    "#postdeploy": "npm run publi",
    "readme": "node makeReadme.js",
    "postreadme": "git add README.md && git commit -m 'readme updated' || exit 0",
    "prepubli": "npm whoami || npm login",
    "publi": "npm publish"
  },
  "devDependencies": {
    "garn-validator": "file:./",
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.2",
    "babel-loader": "^8.0.6",
    "rimraf": "^3.0.0",
    "jest": "^24.9.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jupegarnica/garn-validator.git"
  },
  "keywords": [
    "type",
    "validator",
    "schema",
    "type-checker"
  ],
  "author": "jupegarnica",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jupegarnica/garn-validator/issues"
  },
  "homepage": "https://github.com/jupegarnica/garn-validator#readme"
}
