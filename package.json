{
  "name": "garn-validator",
  "version": "1.0.8",
  "description": "Runtime type validator for vanilla JS without dependencies",
  "main": "commonjs/index.js",
  "module": "src/index.js",
  "files": [
    "commonjs","src"
  ],
  "scripts": {
    "start": "docker-compose run node",
    "test": "cd src && npm run test:watch",
    "test:watch": "jest src --watchAll",
    "test:commonjs": "jest tests",
    "test:commonjs:dom": "jest tests --config=jest.config.dom.js",
    "#postbuild": "npm run test:commonjs",
    "release": "npm version patch",
    "postrelease": "git push origin master --tags",
    "#prebuild": "npm run release",
    "build": "npm run _build",
    "env": "NODE_ENV=production || set NODE_ENV=production",
    "_build": "rimraf commonjs && npm run env && babel src --out-dir commonjs --ignore \"src/*.test.js\"",
    "_build:tests": "rimraf tests && npm run env && babel src --out-dir tests",
    "#predeploy": "npm run build",
    "deploy": "npm run commit && git push origin master",
    "#postdeploy": "npm run publi",
    "publi": "npm publish",
    "#prepubli": "npm whoami || npm login",
    "inject": "node makeReadme.js",
    "commit": "git add . && git commit -m 'build done'",
    "#precommit": "npm run inject"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.2",
    "babel-loader": "^8.0.6",
    "rimraf": "^3.0.0",
    "jest": "^24.9.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jupegarnica/garn-validator.git"
  },
  "keywords": [],
  "author": "jupegarnica",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jupegarnica/garn-validator/issues"
  },
  "homepage": "https://github.com/jupegarnica/garn-validator#readme"
}
